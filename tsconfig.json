{
  "include": ["src","types"],
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}